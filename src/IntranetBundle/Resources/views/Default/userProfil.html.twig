{% include 'IntranetBundle:Default:header.html.twig' %}
<div class="row">
  <div class="small-10 medium-6 columns">
    {% for infos in user %}
    <form class="" action="/updateUser" method="post">
      <table>
          <tr>
              <th>Nom</th>
              <td><input type="text" name="username" value="{{ infos.username }}"></td>
          </tr>
          <tr>
              <th>Prénom</th>
              <td><input type="text" name="lastname" value="{{ infos.usernameCanonical }}"></td>
          </tr>
          <tr>
              <th>Email</th>
              <td><input type="text" name="email" value="{{ infos.email }}"></td>
          </tr>
          <tr>
              <th>MDP</th>
              <td><input type="text" name="password" value=""></td>
          </tr>
          <tr>
              <th>ROLE</th>
              <td>
                  <select class="" name="roles[]">
                      <option value="" {% if infos.roles[0] == 'ROLE_USER' %} selected {% endif %}>Elève</option>
                      <option value="ROLE_ADMIN" {% if infos.roles[0] == 'ROLE_PROF' %} selected {% endif %}>Professeur
                      </option>
                      <option value="ROLE_SUPER_ADMIN" {% if infos.roles[0] == 'ROLE_ADMIN' %} selected {% endif %}>Administrateur
                      </option>
                  </select>
              </td>
          </tr>
          <tr>
            <th><input type="hidden" name="id" value="{{ infos.id }}"></th>
            <td><input type="submit" name="" class="button success" value="Modifier"></td>
          </tr>
      </table>

    </form>


        <table>
            {% for note in infos.notes %}
                <tr>
                    <th>{{ note.matieres.name }}</th>
                    <td><input type="text" name="" value="{{ note.project }}"></td>
                    <td><input type="text" name="" value="{{ note.points }}"></td>
                    <td><input type="text" name="" value="{{ note.commentaires }}"></td>
                </tr>
            {% endfor %}
        </table>
  </div>
  <div class="small-10 medium-6 columns">
    <form class="" action="/deleteUser" method="post">
      {% for infos in user %}
      <input type="hidden" name="id" value="{{infos.id}}">
      {% endfor %}
      <input type="submit" class="button alert" name="" value="Supprimer l'utilisateur">
    </form>
  </div>
</div>


{% endfor %}
{% include 'IntranetBundle:Default:footer.html.twig' %}
