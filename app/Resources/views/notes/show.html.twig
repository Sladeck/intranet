{% extends 'base.html.twig' %}

{% block body %}
    <h1>Note</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ note.id }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ note.points }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ note.commentaires }}</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>{{ note.project }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('notes_edit', { 'id': note.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
