{% extends 'base.html.twig' %}

{% block body %}
    <h1>Notes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Points</th>
                <th>Commentaires</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes %}
            <tr>
                <td><a href="{{ path('notes_show', { 'id': note.id }) }}">{{ note.id }}</a></td>
                <td>{{ note.points }}</td>
                <td>{{ note.commentaires }}</td>
                <td>{{ note.project }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('notes_show', { 'id': note.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('notes_edit', { 'id': note.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('notes_new') }}">Create a new note</a>
        </li>
    </ul>
{% endblock %}
